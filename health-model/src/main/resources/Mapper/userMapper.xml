<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.creator.mapper.UserMapper">
    <select id="countNumOfUser" resultType="java.lang.Integer">
        select
          count(1)
        from
          user
    </select>
    <insert id="insert" parameterType="com.creator.user.User" useGeneratedKeys="true">
        insert user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userName != null">
                userName,
            </if>
            <if test="userKey != null">
                userKey,
            </if>
            <if test="userMsg != null">
                userMsg,
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="userName != null">
                #{userName,jdbcType=VARCHAR},
            </if>
            <if test="userKey != null">
                #{userKey,jdbcType=VARCHAR},
            </if>
            <if test="userMsg != null">
                #{userMsg,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
</mapper>